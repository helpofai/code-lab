{
  "name": "code-lab",
  "version": "1.2.5",
  "description": "A CodePen clone",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "client": "npm run dev --workspace=apps/client",
    "server": "npm run dev --workspace=apps/server",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
